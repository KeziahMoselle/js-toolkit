{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "checkJs": true,
    "strict": false,
    "noImplicitThis": true,
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/abstracts/**/*.js",
    "src/components/Modal.js", 
    "src/utils/**/*.js", 
    "src/services/**/*.js"
  ]
}

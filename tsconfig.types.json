{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "checkJs": true,
    "strict": false,
    "noImplicitThis": true,
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*.js"]
}

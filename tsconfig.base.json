{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./packages/js-toolkit/"
  },
  "include": [
    "packages/js-toolkit/abstracts/**/*.js",
    "packages/js-toolkit/components/**/*.js",
    "packages/js-toolkit/decorators/**/*.js",
    "packages/js-toolkit/services/**/*.js",
    "packages/js-toolkit/utils/**/*.js",
    "packages/js-toolkit/full.js",
    "packages/js-toolkit/index.js"
  ]
}
